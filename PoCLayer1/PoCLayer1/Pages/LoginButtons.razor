@using PoCLayer1.Authentication
@inject NavigationManager navMgr
@inject IAuthService authService


<AuthorizeView>
    <Authorized>
        <img class="icon" src="/img/icons8-logout-48.png" @onclick="Logout" alt="logout" style="cursor:pointer; color: #0000ff; font-weight: bold"/>
    </Authorized>
    
    <NotAuthorized>
        <img class="icon" src="/img/icons8-login-48.png" @onclick="Login" style="margin-right: 10px; cursor:pointer; color: #0000ff; font-weight: bold" alt="Login" />
    </NotAuthorized>
</AuthorizeView>



@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

}